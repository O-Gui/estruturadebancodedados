#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#define ERRO_FATORIALNEGATIVO -1234


int farotial(int N);

void main(){
system("cls");
int N;
int F;
printf("digite um valor\n");
scanf("%d", & N);
F= Farotial(N);
if(F != ERRO_FATORIALNEGATIVO)
printf("resultado: %d", Farotial(N));
else printf("nao existe esse fatorial.");
}

int Farotial(int N){
int R=1;

if(N>= 0){
for (int i= N ;i > 0 ;i--) R = R*i;
return (R);
}
else{
return (ERRO_FATORIALNEGATIVO);

}
}
